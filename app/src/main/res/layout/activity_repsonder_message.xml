<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cs465.goodsamaritan.RepsonderMessage">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:weightSum="1"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:layout_weight="1">
                <TextView
                    android:padding="25px"
                    android:layout_width="750px"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Please take a picture of the emergency"
                    android:id="@+id/textView3"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:gravity="left"
                    android:textAlignment="textStart"
                    android:layout_gravity="right"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imageButton"
                    android:layout_gravity="right"
                    android:src="@drawable/cameraicon"
                    android:scaleType="fitCenter"
                    android:background="#ffffff"
                    android:nestedScrollingEnabled="true"
                    android:onClick="buttonOnClick" />
            </LinearLayout>

        </LinearLayout>

        <fragment
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="500px"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:id="@+id/googleMap2"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Your Location is: Siebel Center \n(Touch to Reposition) "
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="500px"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/editText"
                android:hint="Add additional information here"
                android:gravity="top"
                android:padding="25px"
                android:background="@drawable/border"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton2"
                android:scaleType="fitCenter"
                android:background="#FF0000"
                android:contextClickable="false"
                android:textColor="#ffffff"
                android:text="Submit Emergency"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
