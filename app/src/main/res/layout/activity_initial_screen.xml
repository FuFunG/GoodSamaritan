<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cs465.goodsamaritan.InitialScreen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="200px"
            android:layout_gravity="center_vertical"
            android:id="@+id/linearLayout6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="EMERGENCY"
                android:id="@+id/textView16"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/imageButton7"
                android:layout_above="@+id/imageView2"
                android:textAlignment="center"
                android:textSize="55dp"
                android:textColor="#ff0000"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="700px"
            android:layout_below="@+id/linearLayout6"
            android:layout_above="@+id/relativeLayout4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="300px"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Do you have a life threatening emergency?"
                android:id="@+id/textView10"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="30dp"
                android:layout_gravity="top"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="300px"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Call 911 before selecting &quot;Yes&quot;"
                android:id="@+id/textView11"
                android:textColor="#f90303"
                android:textStyle="bold"
                android:textSize="30dp"
                android:textAlignment="center"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="28dp" />

            <Button
                android:layout_width="300px"
                android:layout_height="200px"
                android:text="Call 911"
                android:id="@+id/button10"
                android:background="#f90303"
                android:textColor="#ffffff"
                android:layout_below="@+id/textView10"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:id="@+id/relativeLayout4">

            <ImageButton
                android:layout_width="400px"
                android:layout_height="300px"
                android:id="@+id/imageButton8"
                android:src="@drawable/no"
                android:scaleType="fitCenter"
                android:background="#c13d28"
                android:layout_alignTop="@+id/imageButton7"
                android:layout_alignParentStart="true"
                android:onClick="mainMenu" />

            <ImageButton
                android:layout_width="400px"
                android:layout_height="300px"
                android:id="@+id/imageButton7"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/yes"
                android:background="#89c04c"
                android:onClick="lifeThreatening"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
